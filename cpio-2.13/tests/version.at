AT_SETUP([cpio version])

AT_CHECK([cpio --version | sed 1q],
         [0],
         [AT_PACKAGE_TARNAME (AT_PACKAGE_NAME) AT_PACKAGE_VERSION
],
[],
[],
[
echo '=============================================================='
echo 'WARNING: Not using the proper version, *all* checks dubious...'
echo '=============================================================='
])

AT_CLEANUP
          
